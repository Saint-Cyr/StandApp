{% extends "::layout.html.twig" %}

{% block content %}
    
                                            
                                            
    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-7">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <img src="{{ asset('images/logo.png') }}" />
                            <h1>
                                Better Ghana Agenda :: Contribute For One Touch Victory
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="device-container">
                        <div class="device-mockup iphone6_plus portrait white">
                            <!-- Login Form -->
                                <!-- jQuery Validation (.js-validation-login class is initialized in js/pages/base_pages_login.js) -->
                                <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                                
                                <div style="padding-top:30px" class="panel-body" >
                       
                        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal'}}) }}
                        {% if form_errors(form.email) %}
                                <div style="margin-bottom: 25px" class="alert alert-danger col-sm-12">
                                    {{ form_errors(form.email, {'attr': {'class': 'alert alert-danger col-sm-12'}}) }}
                                </div>
                            {% endif %}
                            
                            <div style="margin-bottom: 25px" class="input-group">
                                
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                       
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':'mapoukacyr@yahoo.fr'}}) }}                                                   
                            </div>
                            
                            {% if form_errors(form.username) %}
                                <div style="margin-bottom: 25px" class="alert alert-danger col-sm-12">
                                    {{ form_errors(form.username, {'attr': {'class': 'alert alert-danger col-sm-12'}}) }}
                                </div>
                            {% endif %}
                            <div style="margin-bottom: 25px" class="input-group">
                                
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        
                                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder':'phone number: 0268 568 006'}}) }}                                                   
                            </div>
                            
                            {% if form_errors(form.lastName) %}
                                <div style="margin-bottom: 25px" class="alert alert-danger col-sm-12">
                                    {{ form_errors(form.lastName, {'attr': {'class': 'alert alert-danger col-sm-12'}}) }}
                                </div>
                            {% endif %}
                            <div style="margin-bottom: 25px" class="input-group">
                                
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder':'Full name: Saint-Cyr MAPOUKA'}}) }}
                                        
                            </div>
                            
                            
                            {% if form_errors(form.plainPassword.first) %}
                                <div style="margin-bottom: 25px" class="alert alert-danger col-sm-12">
                                    {{ form_errors(form.plainPassword.first, {'attr': {'class': 'alert alert-danger col-sm-12'}}) }}
                                </div>
                            {% endif %}
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder':'password'}}) }}                                                   
                            </div>
                             <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder':'repeat password'}}) }}                                                   
                            </div>
                              
                            

                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                      <input id="btn-login" class="btn btn-success" type="submit" value="Register"/>
                                    </div>
                                    
                                </div>
                              
                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                            Already have an account ?
                                        <a href="{{ path('fos_user_security_login') }}" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                            Sign In Here
                                        </a>
                                            or
                                        <a href="{{ path('stand_app_homepage') }}" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                            Home page
                                        </a>
                                        </div>
                                    </div>
                                </div> 
                            {{ form_widget(form._token) }}
                            

                        </div> 
                                <!-- END Login Form -->
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}