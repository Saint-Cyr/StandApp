{% extends "::layout.html.twig" %}

{% block content %}
    <header>
        <div class="container">
            
            
            <div class="row">
                <div class="col-sm-7">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <img src="{{ asset('images/logo.png') }}" />
                            <h1>
                                Better Ghana Agenda :: Contribute For One Touch Victory
                            </h1>
                            
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="device-container">
                        <div class="device-mockup iphone6_plus portrait white">
                            <!-- Login Form -->
                                <!-- jQuery Validation (.js-validation-login class is initialized in js/pages/base_pages_login.js) -->
                                <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                                <form class="js-validation-login form-horizontal push-30-t push-50" >
                                    <div id="alert-box"></div>
                                    
                                    <div class="form-group">
                                        <div class="col-xs-12">

                                            <label>
                                                <a href='http://members.standappghana.com/home/scratch_card_donation'>
                                                    <img style="width: 300px; height: 120px;" src="{{ asset('images/scrach_card.png') }}" />
                                                </a>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            
                                        </div>
                                        <div class="col-sm-12 controls">
                                    {% if app.user %}
                                        <div class="btn-group">
                                            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-success">
                                                Logout
                                            </a>
                                        </div>
                                    {% else %}
                                        <div class="btn-group">
                                            <a href="{{ path('fos_user_security_login') }}" class="btn btn-success">
                                                Login
                                            </a>

                                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success">
                                                Register
                                            </a>
                                        </div>
                                    {% endif %}
                                </form>
                                <!-- END Login Form -->
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}